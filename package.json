{
  "name": "kasten",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:cli",
    "build:lib": "pnpm run --filter kasten build",
    "build:cli": "pnpm run --filter kasten-cli build",
    "check": "pnpm run check:lint && pnpm run check:format",
    "check:format": "prettier . --check",
    "check:lint": "eslint .",
    "cli": "cd ./packages/kasten-cli && ./bin/dev.js",
    "fix": "pnpm run fix:lint && pnpm run fix:format",
    "fix:format": "prettier . --write",
    "fix:lint": "eslint --fix .",
    "oclif": "cd ./packages/kasten-cli && pnpm oclif",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.10.10",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "prettier": "3.4.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.21.0",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "zod": "^3.24.1"
  }
}
